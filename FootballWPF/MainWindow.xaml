<Window x:Class="FootballWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content="Jezik/Prvenstvo" Click="btnJezikPrvenstvo_Click"></Button>
            <Button Content="Match" Margin="10 0 0 0" MinWidth="50" Click="btnResultPage_Click"></Button>
            <Button Content="Formation" Margin="10 0 0 0" MinWidth="50" Click="btnFormation_OnClick"  ></Button>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="Main" Margin="0,35,0,0"/>
    </Grid>
</Window>
